css:
	body {
		background: #FFF3DA
	}
	.blurred {
	  backdrop-filter: blur(2px);
	  box-shadow: 1px 1px 5px 1px rgba(0,0,0,.07);
	  -moz-backdrop-filter: blur(2px);
	  -o-backdrop-filter: blur(2px);
	  -webkit-backdrop-filter: blur(2px);
	  background: rgba(255, 255, 255, 0.5);
	  width: 20%;
	  border-radius: 20px;
	  height: 40px;
	  display: flex;
	  justify-content: space-evenly;
	  align-items: center;
	}

	.blurred p {
	  margin: 0;
	}

javascript:
	let startingPage = 0
	let bookdId = "#{@book.id}"
	let totalPages = parseInt("#{@book.pages.count}")

	let book = new Book(totalPages, bookdId, startingPage)

	$("#nextPage").click(() => {
	  book.advancePage()
	})
	$("#previousPage").click(() => {
	  book.backPage()
	})

	$(document).keydown((e) => {
	  if (e.which == 37) { 
	    book.backPage()
	    return
	  }
	  if (e.which == 39) { 
	    book.advancePage()
	    return
	  }
	})

	$(document).ready(() => {
		book.fetchPages()
	})
