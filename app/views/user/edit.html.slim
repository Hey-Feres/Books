css:
	#avatar-pieces-selector-board {
		height: 30em;
		overflow-y: scroll;
	}
	.selectable-options {
		width: 100%;
		margin: 0 0 1em 0;
		display: grid;
		grid-template-columns: auto auto auto;
	}
	.selectable-option {
		width: 70px;
	}
	.selectable-option-container {
		margin-bottom: .5em;
		display: flex;
		justify-content: center;
		align-items: center;
		background: #F2F2F2;
		border-radius: 10px;
		width: 8em;
		height: 5em;
	}
	.selectable-color {
		width: 100%;
		margin: 0 0 1em 0;
  	overflow: auto;
  	white-space: nowrap;
	}
	.selectable-color-option {
		width: 3rem;
		height: 3rem;
		border-radius: 50%;
		display: inline-block;
	}
	::-webkit-scrollbar {
	  width: 0px;
	  background: transparent;
	}

	object#body{
		width: 15em;
		position: absolute;
		z-index: 0;
	}
	object#eyes.default, object#eyes.angry, object#eyes.closed, object#eyes.cry, 
