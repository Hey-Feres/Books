					return handlePieceSelection(
						$(this).children('object').attr("id"),
						"object#hair",
						"hair"
					)

				case 'clothing':
					return handlePieceSelection(
						$(this).children('object').attr("id"),
						"object#clothing",
						"clothing"
					)

				default:
					return console.log("Erro")
			}
		})
	})

